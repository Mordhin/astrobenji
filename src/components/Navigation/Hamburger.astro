---
import "../../styles/global.css";
---

<div id="hamburger">
  <span id="top" class="top"></span>
  <span id="mid" class=""></span>
  <span id="bot" class="bot"></span>
</div>

<style>
  #hamburger {
    width: 1.25rem;
    height: 1.25rem;
    display: block;
    cursor: pointer;
    position: relative;
  }

  span {
    display: block;
    position: absolute;
    top: 8px;
    left: 2px;
    background-color: var(--text-color-reversed);
    width: 1rem;
    height: 0.125rem;
    border-radius: 0.25rem;
    transition-property: opacity, transform;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 300ms;
    --tw-translate-x: 0;
    --tw-translate-y: 0;
    --tw-rotate: 0;
    transform: translateX(var(--tw-translate-x))
      translateY(var(--tw-translate-y)) rotate(var(--tw-rotate));
  }

  .top {
    --tw-translate-y: -0.375rem;
  }

  .top-alt {
    --tw-rotate: -45deg;
  }

  .mid-alt {
    opacity: 0;
  }

  .bot {
    --tw-translate-y: 0.375rem;
  }

  .bot-alt {
    --tw-rotate: 45deg;
  }
</style>
<script>
  const menu = document.getElementById("hamburger");
  const dropdown = document.getElementById("dropdown");
  const top = document.getElementById("top");
  const mid = document.getElementById("mid");
  const bot = document.getElementById("bot");
  const toggleMenu = () => {
    top?.classList.toggle("top");
    top?.classList.toggle("top-alt");
    mid?.classList.toggle("mid-alt");
    bot?.classList.toggle("bot");
    bot?.classList.toggle("bot-alt");
    dropdown?.classList.toggle("hide");
  };
  menu?.addEventListener("click", toggleMenu);
</script>
